<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/svFooter"
        android:layout_margin="8dip"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/llParentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:orientation="vertical" />
    </ScrollView>

    <RelativeLayout
        android:id="@+id/svFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dip"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnExit"
                android:contentDescription="@string/btnExit"
                android:src="@drawable/exit"
                android:background="@android:color/transparent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="3dip"
                android:padding="1dip"
                android:scaleType="fitCenter"
                />

            <ImageButton
                android:id="@+id/btnBD"
                android:contentDescription="@string/btnBD"
                android:src="@drawable/sd"
                android:background="@android:color/transparent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="3dip"
                android:padding="1dip"
                android:scaleType="fitCenter"
                />

            <ImageButton
                android:id="@+id/btnInfo"
                android:contentDescription="@string/btnInfo"
                android:src="@drawable/info"
                android:background="@android:color/transparent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="3dip"
                android:padding="1dip"
                android:scaleType="fitCenter"
                />

            <ImageButton
                android:id="@+id/btnGlossary"
                android:contentDescription="@string/btnGlossary"
                android:src="@drawable/glossary"
                android:background="@android:color/transparent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="3dip"
                android:padding="1dip"
                android:scaleType="fitCenter"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

