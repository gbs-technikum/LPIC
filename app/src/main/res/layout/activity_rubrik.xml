<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/svFooter"
        android:layout_margin="8dip"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/llParentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:paddingTop="40dip"></LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/svFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dip">


            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dip"
                android:layout_weight="0.1"
                android:drawableStart="@drawable/back"
                android:gravity="start|center_vertical"
                android:text="@string/back"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@null"
                android:drawablePadding="10dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/btnTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dip"
                android:layout_weight="1"
                android:drawableStart="@drawable/starttest"
                android:gravity="start|center_vertical"
                android:text="@string/starttest"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@null"
                android:drawablePadding="10dp"
                style="?android:attr/borderlessButtonStyle"
                />

            <ImageButton
                android:id="@+id/btnInfo"
                android:contentDescription="@string/btnInfo"
                android:src="@drawable/info"
                android:background="@android:color/transparent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.1"
                android:layout_margin="3dip"
                android:padding="1dip"
                android:scaleType="fitCenter"
                />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

